        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_imageView2"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_imageView3"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"/>

</LinearLayout>